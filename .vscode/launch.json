{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Run Extension",            // shows in debug dropdown
      "type": "extensionHost",            // special VS Code debug type
      "request": "launch",                // run, not attach
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}" // run extension in Dev Host
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"  // tells debugger where compiled JS is
      ],
    }
  ]
}
